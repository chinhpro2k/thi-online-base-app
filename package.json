{
	"name": "autoupdater-demo",
	"version": "0.1.4",
	"private": true,
	"main": "public/electron.js",
	"homepage": "./",
	"author": {
		"name": "chinhcd",
		"email": "7a3dqh@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/chinhpro2k/electron-base-auto-update"
	},
	"dependencies": {
		"@ant-design/icons": "^4.7.0",
		"@testing-library/jest-dom": "^5.16.2",
		"@testing-library/react": "^12.1.2",
		"@testing-library/user-event": "^13.5.0",
		"antd": "^4.23.4",
		"concurrently": "^7.0.0",
		"cross-env": "^7.0.3",
		"electron-is-dev": "^2.0.0",
		"electron-updater": "^4.6.5",
		"prettier": "^2.7.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-router-dom": "^6.4.2",
		"react-scripts": "5.0.0",
		"wait-on": "^6.0.0",
		"web-vitals": "^2.1.4"
	},
	"scripts": {
		"start": "concurrently \"cross-env BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
		"build:prod": "react-scripts build && electron-builder --win",
		"build:prod:linux": "react-scripts build && electron-builder --linux",
		"build:publish": "set GH_TOKEN=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 && react-scripts build && electron-builder --win --publish always"
	},
	"build": {
		"appId": "com.autoupdater.demo",
		"productName": "IOT-management",
		"directories": {
			"output": "electron-build",
			"buildResources": "build-assets"
		},
		"win": {
			"icon": "assets/app-icon/icon/icon.ico",
			"publish": [
				"github"
			]
		},
		"mac": {
			"icon": "assets/app-icon/icon/icon.icns",
			"target": [
				"dmg"
			]
		},
		"linux": {
			"icon": "assets/app-icon/icon/icon.ico",
			"target": [
				"deb",
				"rpm",
				"AppImage"
			],
			"category": "Development"
		}
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"electron": "^17.0.0",
		"electron-builder": "^22.14.13"
	}
}
